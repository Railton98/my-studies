{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.email }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<div class="w-4/5 m-auto text-center">
			<div class="py-12 border-b border-gray-200">
				<h1 class="pt-12 pb-8 text-6xl">
					Login
				</h1>

				<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="block w-1/5 h-20 mx-auto mt-10 text-2xl bg-transparent border-b-2 outline-none" placeholder="Email" autocomplete="email" required autofocus>

				<input type="password" name="password" id="inputPassword" class="block w-1/5 h-20 mx-auto mt-10 text-2xl bg-transparent border-b-2 outline-none" autocomplete="current-password" placeholder="Password" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="w-1/5 px-8 py-4 mt-10 text-lg font-extrabold text-gray-100 uppercase bg-blue-500 mt-15 rounded-3xl" type="submit">
					Sign in
				</button>
			</form>
		</div>
	</div>
{% endblock %}
